<?xml version="1.0"  encoding="ISO-8859-1"?> 
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure 1.0//EN" "http://jetty.mortbay.org/configure_1_3.dtd">
<Configure class="org.mortbay.jetty.Server">
    <Call name="addListener">
        <Arg>
            <New class="org.mortbay.http.SocketListener">
                <Set name="Port">80</Set>
                <Set name="MinThreads">5</Set>
                <Set name="MaxThreads">255</Set>
                <Set name="MaxIdleTimeMs">60000</Set>
                <Set name="LowResourcePersistTimeMs">5000</Set>
            </New>
        </Arg>
    </Call>
    <Call name="addContext">
        <Arg>/chat</Arg>
        <Call name="addServlet">
            <Arg>AjaxD</Arg>
            <Arg>AjaxD</Arg>
            <Arg>org.aitools.programd.server.servlet.AjaxD</Arg>
        </Call>
        <Call name="addServlet">
            <Arg>Chatter</Arg>
            <Arg>Chatter</Arg>
            <Arg>org.aitools.programd.server.servlet.Chatter</Arg>
        </Call>
    </Call>
    <Call name="addContext">
    	<Arg>/</Arg>
    	<Set name="ResourceBase">./docroot/</Set>
    	<Call name="addHandler">
    		<Arg><New class="org.mortbay.http.handler.ResourceHandler"/></Arg>
	    </Call>
    </Call>

</Configure>









